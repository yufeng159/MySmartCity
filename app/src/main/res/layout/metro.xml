<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/ly_top_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bg_color">
        <TextView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="返回"
            android:textSize="20dp"
            android:layout_alignParentLeft="true"
            android:gravity="left|center"/>
        <TextView
            android:id="@+id/txt_topbar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/cadetblue"
            android:text="城市地铁"/>
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/metro_city"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="总览>"
            android:textSize="20dp"
            android:gravity="center|right"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/cadetblue"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/gps"
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前位置：建国门"/>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/metro_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="地铁路线名称"
        android:textColor="@color/chartreuse"
        android:layout_marginLeft="20dp"
        android:gravity="left|center"/>
    <TextView
        android:id="@+id/metro_nextStep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/chartreuse"
        android:text="下一站名称"/>
    <TextView
        android:id="@+id/metro_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="到达本站时长"
        android:textColor="@color/chartreuse"
        android:gravity="center|right"
        android:layout_marginRight="20dp"/>
        <View
            android:layerType="software"
            android:layout_below="@+id/metro_nextStep"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/dash_line" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/metro_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>



</LinearLayout>