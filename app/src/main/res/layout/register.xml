<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="70dp">
        <ImageView
            android:id="@+id/reg_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="账   号："
            android:gravity="center"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/reg_acc"
            android:layout_toRightOf="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="昵   称："
            android:gravity="center"
            android:layout_below="@+id/text1"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/reg_name"
            android:layout_toRightOf="@+id/text1"
            android:layout_width="match_parent"
            android:layout_alignBottom="@+id/text"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="密   码："
            android:layout_below="@+id/text"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/reg_pwd"
            android:layout_toRightOf="@+id/text2"
            android:layout_alignBottom="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="邮   箱："
            android:layout_below="@+id/text2"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/emali"
            android:layout_toRightOf="@+id/text3"
            android:layout_alignBottom="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="手   机："
            android:layout_below="@+id/text3"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/phone"
            android:layout_toRightOf="@+id/text4"
            android:layout_alignBottom="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>


        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text4"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="性   别："
                android:textSize="20sp" />
            <RadioButton
                android:id="@+id/sex0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男" />
            <RadioButton
                android:id="@+id/sex1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女" />
        </RadioGroup>
        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="身份证："
            android:layout_below="@+id/rg"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/idcard"
            android:layout_toRightOf="@+id/text6"
            android:layout_alignBottom="@+id/text6"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:id="@+id/reg_btn_register"
            android:layout_marginLeft="70dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回登录"
            android:id="@+id/reg_btn_login"
            android:layout_marginLeft="70dp"
            />
    </LinearLayout>
</LinearLayout>