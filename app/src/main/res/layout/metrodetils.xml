<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/ly_top_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bg_color">
        <TextView
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="返回"
            android:textSize="20dp"
            android:gravity="left|center"/>
        <TextView
            android:id="@+id/txt_topbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/cadetblue"
            android:text="城市地铁"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/cadetblue"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="起始站"
            android:textSize="20dp"
            android:gravity="left|center"
            android:textColor="@color/red"
            android:layout_marginLeft="50dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|right"
            android:textSize="20dp"
            android:layout_marginRight="50dp"
            android:textColor="@color/cadetblue"
            android:text="终点站"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/cadetblue"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:id="@+id/metro_start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="起始站"
            android:textSize="20dp"
            android:gravity="left|center"
            android:textColor="@color/red"
            android:layout_marginLeft="50dp"/>
        <TextView
            android:id="@+id/metro_end"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|right"
            android:textSize="20dp"
            android:layout_marginRight="50dp"
            android:textColor="@color/cadetblue"
            android:text="终点站"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/cadetblue"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="间隔站数"
            android:textSize="18sp"
            android:textColor="@color/chartreuse"
            android:layout_marginLeft="20dp"
            android:gravity="left|center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/chartreuse"
            android:text="剩余时间"/>
        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="剩余距离"
            android:textSize="18sp"
            android:textColor="@color/chartreuse"
            android:gravity="center|right"
            android:layout_marginRight="20dp"/>
        <View
            android:layout_marginTop="10dp"
            android:layout_below="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/cadetblue"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/metro_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="间隔站数"
            android:textSize="18sp"
            android:textColor="@color/chartreuse"
            android:layout_marginLeft="40dp"
            android:gravity="left|center"/>
        <TextView
            android:id="@+id/metro_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/chartreuse"
            android:text="剩余时间"/>
        <TextView
            android:id="@+id/metro_km"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="剩余距离"
            android:textColor="@color/chartreuse"
            android:gravity="center|right"
            android:textSize="18sp"
            android:layout_marginRight="40dp"/>
        <View
            android:layout_below="@+id/metro_km"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="2px"
            android:background="@color/cadetblue"/>
    </RelativeLayout>
    <RelativeLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/metro_time_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>