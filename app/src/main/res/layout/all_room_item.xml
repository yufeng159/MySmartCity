<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_radio"
        android:padding="10dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/r_pic"
            android:layout_width="120dp"
            android:layout_height="90dp"/>
        <TextView
            android:id="@+id/r_name"
            android:layout_toRightOf="@+id/r_pic"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:text="房源名称："
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/r_areasize"
            android:layout_toRightOf="@+id/r_pic"
            android:text="面积:"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/r_pic"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/r_price"
            android:layout_toRightOf="@+id/r_areasize"
            android:layout_alignBottom="@id/r_areasize"
            android:text="价格:666/m"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/r_description"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/r_pic"
            android:layout_width="wrap_content"
            android:text="房源介绍："
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>